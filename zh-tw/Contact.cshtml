<script>
	function check()
	{
		var company = document.getElementById("company");
		var email = document.getElementById("email");
		var phone = document.getElementById("phone");
		var discript = document.getElementById("discript");
		var message = "";
		
		if(company.value == "")
			message += "單位、公司名稱為空白\n";
		if(email.value == "")
			message += "E-mail為空白\n";
		if(phone.value == "")
			message += "連絡電話為空白\n";
		if(discript.value == "")
			message += "內容為空白\n";
		if(message != "")
			alert(message);
			
		return false;
	}
</script>


