@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

@{
	Layout = "~/zh-tw/_SiteLayout.cshtml";
	Page.Title = "聯絡我們";	
	Validation.RequireField("company","請填寫單位、公司名稱");
    Validation.RequireField("email","請填寫E-Mail");
    Validation.RequireField("phone","請填寫電話");
    Validation.RequireField("discript","請填寫內容");
}



<div id="body">
	<div class="container">
		<div class="header">
			<h1>聯絡我們</h1>
		</div>
		<div class="contact">
			<header>
				<br>
			</header>
				
				<form class="email-content" id="mailForm" name="mailForm" method="post" onsubmit="return check()" action="send.cshtml">
					單位、公司名稱<br>
					<input type="text" id="company" name="company" @Validation.For("company")>
                    @Html.ValidationMessage("company")<br>
					E-mail<br>
					<input type="text" id="email" name="email" @Validation.For("email")>
                    @Html.ValidationMessage("email")<br>
					聯絡電話<br>
					<input type="number" id="phone" name="phone" @Validation.For("phone")>
                    @Html.ValidationMessage("phone")<br>
					內容<br>
					<textarea cols="40" rows="8" id="discript" name="discript" @Validation.For("discript")></textarea>
                    @Html.ValidationMessage("discript")<br>
					<input type="submit" value="送出" class="submit">
				</form>
			<header>
				<h3>連絡電話:</h3>
			</header>
			<p>
				<span class="label">電話:</span>
				<span class="label">886-3-386-7575</span>
			</p>
			<p>
				<span class="label">業務部分機:</span>
				<span>333或332</span>
			<p>
				<span class="label">傳真:</span>
				<span>886-3-386-6955</span>
			</p>
			<p>
				<span class="label">E-Mail:</span>
				<span><a href="mailto:service@tangteck.com?subject=客戶網頁回函&amp;body=公司:       電話:       傳真:       聯絡人:      ">service@tangteck.com</a></span>
			</p>
			<header>
				<h3>地址:</h3>
			</header>
			<p>
				台灣桃園縣大園鄉<br />
				水源路913號<br>
			</p>
		</div>
