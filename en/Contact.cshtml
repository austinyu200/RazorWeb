@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

@{
	Layout = "~/en/_SiteLayout.cshtml";
	Page.Title = "Contact";	

    string emailMessage = "E-Mail format error";
	Validation.Add("email",Validator.Required(emailMessage),Validator.Regex("\\w+([-+.]\\w+)*@\\w+([-.]\\w+)*\\.\\w+([-.]\\w+)*","E-Mail format error"));

	Validation.RequireField("company","This field can't be void");
    //Validation.RequireField("email","This field can't be void");
    Validation.RequireField("phone","This field can't be void");
    Validation.RequireField("discript","This field can't be void");
}



<div id="body">
	<div class="container">
		<div class="header">
			<h1>Contact Us</h1>
		</div>
		<div class="content-left">
			<div class="contact">
				<br>			
				<form class="email-content" id="mailForm" name="mailForm" method="post" onsubmit="return check()" action="~/en/send.cshtml">
					Company or Unit<br>
					<input type="text" id="company" name="company" @Validation.For("company")>
					@Html.ValidationMessage("company")<br>
					E-mail<br>
					<input type="text" id="email" name="email" @Validation.For("email")>
					@Html.ValidationMessage("email")<br>
					Phone<br>
					<input type="number" id="phone" name="phone" @Validation.For("phone")>
					@Html.ValidationMessage("phone")<br>
					Content<br>
					<textarea cols="40" rows="8" id="discript" name="discript" @Validation.For("discript")></textarea>
					@Html.ValidationMessage("discript")<br>
					<input type="submit" value="Submit" class="submit">
				</form>
